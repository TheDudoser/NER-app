{% extends "base.html.jinja" %}

{% block head %}
    {{ super() }}
    <link href="/public/css/dictionary.css" rel="stylesheet">
{% endblock %}

{% block content %}
    <!-- Добавляем модальное окно для выбора словаря -->
    <div class="modal fade" id="addToDictionaryModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <div>
                        <h5 class="modal-title">Выберите словарь для объединения</h5>
                        <small class="text-muted">При объединении целевой словарь имеет больший приоритет.
                            <br>Повторяющиеся элементы не будут добавлены</small>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <select class="form-select" id="targetDictionarySelect">
                    </select>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                    <button type="button" class="btn btn-primary" id="confirmAddToDictionaryBtn">Подтвердить</button>
                </div>
            </div>
        </div>
    </div>
    <div class="card mb-4">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <h5 class="card-title mb-0">
                        {% if dictionary is defined and dictionary.name %}
                            Редактирование словаря: <span class="text-primary">{{ dictionary.name }}</span>
                        {% else %}
                            Создание нового словаря
                        {% endif %}
                    </h5>
                </div>
                {% if is_edit_mode %}
                    <div id="file_id" hidden="hidden">{{ dictionary.id }}</div>
                {% endif %}
                <div style="display: flex;">
                    <button class="btn btn-outline-primary me-2" id="addToDictionaryBtn">
                        <i class="bi bi-plus-circle"></i> Объединить
                    </button>
                    <button class="btn btn-primary" id="exportDictionaryBtn">
                        <i class="bi bi-save"></i> Сохранить
                    </button>
                </div>
            </div>

            <div class="alert alert-info mb-3 d-flex align-items-center">
                <i class="bi bi-info-circle me-2"></i>
                <span>
                    Словосочетания можно перетаскивать между колонками.<br>
                    Нажимая на термин вы переходите в режим работы с ним.
                </span>
            </div>

            <div class="mb-3">
                <label for="dictionaryName" class="form-label">Название словаря*</label>
                <input type="text" class="form-control" required id="dictionaryName"
                       placeholder="Введите название" value="{{ dictionary is defined and dictionary.name or '' }}">
            </div>

            <div class="d-flex align-items-center mb-3 flex-wrap">
                <label for="tfidfRange" class="form-label me-3 mb-0">Порог TF-IDF</label>
                <input type="range"
                       class="form-range me-3"
                       style="min-width: 100px; max-width: 300px;"
                       id="tfidfRange"
                       min="0" max="1"
                       step="0.001"
                       value="{{ tfidf_range or 0 }}"
                />
                <input type="number"
                       id="tfidfValue"
                       class="form-control"
                       style="width: 5.5rem;"
                       min="0" max="1"
                       step="0.001"
                       value="{{ tfidf_range or 0 }}"
                />
            </div>

            <div class="connection-container">
                <div class="row">
                    {% import 'components/phrase_list.html.jinja' as phrase_list %}
                    <div class="col-md-4">
                        {{ phrase_list.get(
                            name_list="Именованные сущности",
                            phrases=dictionary_data.phrases if dictionary is defined else phrases,
                            style_id="phrases-column",
                            show_subname=true) }}
                    </div>
                    <div class="col-md-4">
                        {{ phrase_list.get(
                            name_list="Термины",
                            phrases=dictionary_data.terms if dictionary is defined else [],
                            style_id="terms-column") }}
                    </div>
                    <div class="col-md-4">
                        <div>
                            {{ phrase_list.get(
                                name_list="Синонимы",
                                phrases=dictionary_data.synonyms if dictionary is defined else [],
                                style_id="synonyms-column") }}
                        </div>
                        <div class="mt-2">
                            {{ phrase_list.get(
                                name_list="Значения",
                                phrases=dictionary_data.definitions if dictionary is defined else [],
                                style_id="definitions-column") }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascript %}
    {{ super() }}
    <script src="/public/js/dictionary.js"></script>
    <script>
        {% if dictionary_data %}
            window.DICTIONARY_DATA = {{ dictionary_data|tojson }};
        {% endif %}
        {% if text %}
            window.TEXT_CONTENT = {{ text|tojson|safe }};
        {% endif %}
    </script>
{% endblock %}
